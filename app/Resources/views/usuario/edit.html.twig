{% extends 'base.html.twig' %}

{% block content %}
    <div class="table-wrapper page-header">
        <h1>{% if delete_form is defined %}Editar{% else %}Agregar{% endif %} Usuario</h1>
        {% if delete_form is defined %}
            {{ form_start(delete_form, {'attr': {'class': 'text-right'}}) }}
                <input class="btn btn-danger" type="submit" value="Eliminar" />
            {{ form_end(delete_form) }}
        {% endif %}
    </div>
    {{ form_start(edit_form, {'attr': {'class': 'progress-form'}}) }}
        {{ form_widget(edit_form) }}
        <div class="col-xs-12 text-center" style="margin-top: 12px;">
            <a class="btn btn-default" href="{{ path('usuario_index') }}" title="Volver al listado">Cancelar</a>
            <input class="btn btn-primary" type="submit" value="Guardar" />
        </div>
    {{ form_end(edit_form) }}
{% endblock %}
