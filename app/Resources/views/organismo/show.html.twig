    <a class="btn btn-primary pull-right" href="{{path('organismo_index')}}" title="Volver atras">Volver</a>
</div> 
        {% endblock %}
        {% block subtitulo %}{{ organismo.tipoOrganismo ~ " | " ~ organismo.estado }}{% endblock subtitulo %}
    {% endembed %}
{% endblock section_title %}

{% block first_row %}
