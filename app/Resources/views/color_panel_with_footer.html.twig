<div class="col-lg-4 col-md-6">
    <div class="panel {{ classColor }}">
        <div class="panel-heading">
            <div class="row">
                <div class="col-xs-3">
                    <i class="material-icons md-68">
                        {{ icon }}
                    </i>
                </div>
                <div class="col-xs-9 text-right">
                    <div class="huge">{{ bigText }}</div>
                    <div>{{ smallText }}</div>
                </div>
            </div>
        </div>
        <a href="{{ footerLink }}">
            <div class="panel-footer">
                <span class="pull-left">Ver {{ smallText }}</span>
                <span class="pull-right"><i class="material-icons">chevron_right</i></span>
                <div class="clearfix"></div>
            </div>
        </a>
    </div>
</div>